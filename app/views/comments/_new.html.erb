<%= form_with(model: post_id.comments.build, url: comments_path, id:"form", class: "ml-1") do |c| %>
  <%= c.hidden_field :user_id, value: current_user.id %>
  <%= c.hidden_field :post_id, value: post_id.id %>
  <%= c.text_area :content, class:"comment-area px-3 text-clr" %>
  <%= c.submit 'Comment', class:"d-none" %>
<% end %>


<script>
    $('#form textarea').keydown(function(e) {
        if (e.keyCode == 13) {
            $('#form').submit();
        }
    });
</script>