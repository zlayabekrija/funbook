<%= form_with(model: comment.reactions.build, url: like_path, class:"d-inline-block") do |r| %>
  <%= r.hidden_field :user_id, value: current_user.id %>
  <%= r.hidden_field :resource_id, value: comment.id %>
  <%= r.hidden_field :resource_type, value: "Comment" %>
  <%= r.hidden_field :like, value: true %>
  <%= r.button fa_icon("thumbs-up"), class: "button my-button", id: "register-button" %>
<% end %>