<%= form_with(model: p.reactions.build, url: like_path) do |r| %>
  <%= r.hidden_field :user_id, value: current_user.id %>
  <%= r.hidden_field :like, value: true %>
  <%= r.hidden_field :post_id, value: p.id %>
  <%= r.submit fa_icon('thumbs-up',text:'Some') %>
<% end %>


<%= button_tag do %>
  <%= fa_icon('thumbs-down', style: 'color: red') %>
<% end %>